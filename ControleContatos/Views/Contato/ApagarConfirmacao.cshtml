@model ContatoModel
@{
    ViewData["Title"] = "Confirmação Apagar Contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato @Model.Nome?</h3>
</div>

<a class="btn btn-primary" role="button" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Apagar">Confirmar</a>
<a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>