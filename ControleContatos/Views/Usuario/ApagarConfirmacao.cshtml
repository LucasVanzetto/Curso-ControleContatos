@model UsuarioModel
@{
  ViewData["Title"] = "Confirmação Apagar Usuário";
}

<div class="text-center">
  <h3>Realmente deseja apagar o usuário @Model.Nome?</h3>
</div>

<a class="btn btn-primary" role="button" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="Apagar">Confirmar</a>
<a class="btn btn-danger" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>